<Window x:Class="GraphDigitizer.Views.Help"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help" Height="319" Width="453" Icon="../Resources/Help.png" WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl Name="HelpPanel">
            <TabItem Header="General" Name="GeneralTab" GotFocus="OnGeneralTabGotFocus">
                <Grid></Grid>
            </TabItem>
            <TabItem Header="Key Shortcuts" Name="KeysTab" GotFocus="OnKeysTabGotFocus" />
            <TabItem Header="About..." GotFocus="OnAboutTabGotFocus" />
        </TabControl>
        <DockPanel Margin="5,27,5,5" Name="ContentPanel">
            <RichTextBox Name="ContentEdit" VerticalScrollBarVisibility="Auto" IsReadOnly="True" />
        </DockPanel>
    </Grid>
</Window>
